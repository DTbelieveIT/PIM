extends ../layout

block content
  .container
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th 邮箱
            th 姓名
            th 性别
            th 年龄
            th 联系电话
            th 部门
            th 职位
            th 更新时间
            th 查看
            th 修改
            th 删除
        tbody
          each item in users
            tr(class="item-id-#{item._id}")
              td #{item.mail}
              td #{item.name}
              td #{item.sex}
              td #{item.age}
              td #{item.tel}
              td #{item.department}
              td #{item.position}
              td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
              td: a(target="_blank", href="/admin/user/detail/#{item._id}") 查看
              td: a(target="_blank", href="/admin/user/update/#{item._id}") 修改
              td
                button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除
    a.btn.btn-success(target="_blank",href="/admin/user/add") 添加成员
    script(src="/js/admin.js")